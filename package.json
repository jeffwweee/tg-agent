{
  "name": "tg-agent",
  "version": "2.0.0",
  "description": "Telegram Gateway + MCP Server for Claude Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:gateway": "tsx watch src/index.ts --gateway",
    "dev:mcp": "tsx watch src/index.ts --mcp",
    "start": "node dist/index.js",
    "start:gateway": "node dist/index.js --gateway",
    "start:mcp": "node dist/index.js --mcp",
    "setup:inbox": "tsx src/scripts/setup-inbox.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "mcp",
    "claude",
    "bot",
    "gateway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
