# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Redis Configuration
REDIS_URL=redis://localhost:6379
INBOX_STREAM_KEY=tg:inbox
INBOX_CONSUMER_GROUP=tg-consumer

# Message Settings
MESSAGE_LEASE_MS=43200000

# Gateway Configuration
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0

# Tmux Wake-up (Optional)
# If set, injects a command into the tmux session when messages arrive
TMUX_SESSION_NAME=
TMUX_WAKEUP_COMMAND=/mcp tg-agent:telegram_poll

# MCP Configuration
MCP_SERVER_NAME=tg-agent
MCP_SERVER_VERSION=2.0.0

# Logging
LOG_LEVEL=info
